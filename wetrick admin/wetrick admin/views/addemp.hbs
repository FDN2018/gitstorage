<!DOCTYPE html>
<html>

<head>
    {{> headcdn}}
</head>

<body>
{{> sidebar}}

    <div id="main">
{{> role}}
        <div id="main-content">
            <section class="content">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Add Employee</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form role="form" name="addemp" method="post">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Name</label> <span style="color:red"><strong>*</strong></span>
                                        <input type="text" class="form-control" id="empname" name="empname"
                                            placeholder="Name" required="">
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="type">Email</label> <span style="color:red"><strong>*</strong></span>
                                        <input type="email" class="form-control" placeholder="Email" id="empmail" name="empmail" required="">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="">Username</label> <span style="color:red"><strong>*</strong></span>
                                        <input type="text" class="form-control" placeholder="Username" id="empusername" name="empusername" required>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="name">Password</label> <span style="color:red"><strong>*</strong></span>
                                        <input type="password" class="form-control" placeholder="Password" required="" id="emppass" name="emppass">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="email">Mobile No</label> <span style="color:red"><strong>*</strong></span>
                                        <input type="number" class="form-control" placeholder="9876543210" required="" id="empphone" onKeyPress="if(this.value.length==10) return false;"name="empphone">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Status</label> <span style="color:red"><strong>*</strong></span>
                                        <select class="form-control" name="status" required="" id="empstatus" name="empstatus">
                                            <option value="Active">Active</option>
                                            <option value="Inactive" selected="">Inactive</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Role</label> <span style="color:red"><strong>*</strong></span>
                                <select class="form-control" required="" id="emprole" name="emprole">
                                    <option value="Admin">Admin</option>
                                    <option value="Support">Support</option>
                                    <option value="Sales">Sales</option>
                                    <option value="Other">Other</option>
                                </select>
                            </div>
                            <div class="row mt-3 mb-3">
                                <div class="col-md-6">
                                    <button class="btn btn-block btn-danger previous" id="prevtab"
                                        style="display:none;">Previous</button>
                                </div>
                                <div class="col-md-6">
                                    <button class="btn btn-block btn-success next" id="nexttab" onclick=validateForm()>Add Employee</button>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-body -->

                    </form>
                </div>



            </section>
        </div>
        {{> footer}}
    </div>
{{> cdnjs}}
<script src="js/pages/addemp.js"></script>

</body>

</html>