<!DOCTYPE html>
<html>

<head>
{{> headcdn}}
</head>

<body>
{{> sidebar}}

    <div id="main">
{{> role}}
        <div id="main-content">
            <section class="section">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Create New Reseller</h4>
                    </div>
                    <div class="card-content">
                        <div class="card-body">
                            <div class="list-group list-group-horizontal-sm mb-1 text-center" role="tablist">
                                <a class="list-group-item list-group-item-action active" id="account-list"
                                    data-bs-toggle="list" href="#account" role="tab"><i class="bi bi-person"></i>
                                    Account</a>
                                <a class="list-group-item list-group-item-action " id="address-list"
                                    data-bs-toggle="list" href="#address" role="tab"><i class="bi bi-geo-alt"></i>
                                    Address</a>
                                <a class="list-group-item list-group-item-action " id="network-list"
                                    data-bs-toggle="list" href="#network" role="tab"><i class="bi bi-hdd-network"></i>
                                    Zone</a>
                                <a class="list-group-item list-group-item-action" id="upload-list" data-bs-toggle="list"
                                    href="#upload" role="tab"><i class="bi bi-upload"></i> Upload</a>
                            </div>
                            <form name="reseller" method="post">
                            <div class="tab-content text-justify">
                                <div class="tab-pane fade show active" id="account" role="tabpanel"
                                    aria-labelledby="account-list">
                                    <p class="text-center font-bold">Reseller Information</p>
                                    <p style="color: red;">* Required Fields</p>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>Full name</label>
                                            <span style="color:red"><strong>*</strong></span>
                                            <input type="text" name="fullname" id="fullname" placeholder="Full name"
                                                class="form-control" required>
                                            <span id="fname" style="color:red"></span>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="">DOB</label>
                                                <span style="color:red"><strong>*</strong></span>
                                                <input type="date" id="dob" name="dob" placeholder="Date of Birth"
                                                    class="form-control" required>
                                                <span id="doberr" style="color:red"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="">Mobile No</label>
                                                <span style="color:red"><strong>*</strong></span>
                                                <input type="number" placeholder="Mobile No" id="mobileno"
                                                    name="mobileno" onKeyPress="if(this.value.length==10) return false;"
                                                    autocomplete="off" class="form-control" required>
                                                <span id="merr" style="color:red"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="">Email</label>
                                        <span style="color:red"><strong>*</strong></span>
                                        <input type="email" name="email" id="email" placeholder="Email"
                                            class="form-control" required>
                                    </div>
                                        </div>
                                    <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="">Organisation</label>
                                        <input type="text" name="org" id="org" placeholder="Organisation Name"
                                            class="form-control">
                                    </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="document">Reseller Photo</label>
                                        <span style="color:red"><strong>*</strong></span>
                                        <input type="file" name="cuploads" class="form-control" id="cuploads" onchange=ValidateSingleInput(this) required>
                                        <span id="custerr" style="color:red"></span>
                                        <p style="color: red;">Note : Please upload pdf/ jpg/ png/ jpeg for view purpose.</p>
                                    </div>
                                    <div class="row mt-3 mb-3">
                                        <div class="col-md-6">
                                            <button class="btn btn-block btn-danger previous"
                                               type="button" id="tab1prev" style="display: none;">Previous</button>
                                        </div>
                                        <div class="col-md-6">
                                            <button class="btn btn-block btn-success next" id="tab1next"
                                                type="button" onclick=Tab1()>Next</button>
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane fade" id="address" role="tabpanel" aria-labelledby="address-list">
                                    <p class="text-center font-bold mt-4">Permanent Address</p>
                                    <p style="color: red;">* Required Fields</p>  
                                    <div class="row">
     
                                      <div class="col-md-12">
                                            <div class="form-group">
                                                <label for="">Address</label>
                                                <span style="color:red"><strong>*</strong></span>
                                                <input type="text" id="paddress" name="paddress" placeholder="Address"
                                                    class="form-control" required>
                                                <span id="adderr" style="color:red"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="">Pincode</label>
                                                <span style="color:red"><strong>*</strong></span>
                                                <input type="number" id="pincode" name="pincode" min="1"
                                                    onKeyPress="if(this.value.length==6) return false;"
                                                    placeholder="Pincode" class="form-control" required>
                                                <span id="iperr" style="color:red"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="">District</label>
                                                <span style="color:red"><strong>*</strong></span>
                                                <input type="text" name="district" id="district"
                                                    style="background-color: white;" class="form-control">
                                                <span id="diserr" style="color:red"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="">State</label>
                                                <span style="color:red"><strong>*</strong></span>
                                                <input type="text" name="state" id="state"
                                                    style="background-color: white;" class="form-control">
                                                <span id="stateerr" style="color:red"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="">Country</label>
                                                <span style="color:red"><strong>*</strong></span>
                                                <input type="text" name="country" id="country"
                                                    style="background-color: white;" class="form-control">
                                                <span id="counerr" style="color:red"></span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group" id="checkF">
                                        <input type="checkbox" id="copyadd" onchange=copyAdd()> <Label>
                                            <p class="font-bold"> Copy Permanent Address To Working Area
                                                (Office) Address</p>
                                        </Label>

                                    </div>

                                    <!---Office Address-->
                                    <p class="text-center font-bold mt-4">Working Area
                                                (Office) Address</p>
                                    <div class="row">
                                      <div class="col-md-12">
                                            <div class="form-group">
                                                <label for="">Address</label>
                                                <span style="color:red"><strong>*</strong></span>
                                                <input type="text" id="iaddress" name="iaddress" placeholder="Office Address"
                                                    class="form-control" required>
                                                <span id="iadderr" style="color:red"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="">Pincode</label>
                                                <span style="color:red"><strong>*</strong></span>
                                                <input type="number" id="ipincode" name="ipincode" min="1"
                                                    onKeyPress="if(this.value.length==6) return false;"
                                                    placeholder="Pincode" class="form-control" required>
                                                <span id="iperr" style="color:red"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="">District</label>
                                                <span style="color:red"><strong>*</strong></span>
                                                <input type="text" name="idistrict" id="idistrict"
                                                    style="background-color: white;" class="form-control">
                                                <span id="diserr" style="color:red"></span>
                                            </div>
                                        </div>

                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="">State</label>
                                                <span style="color:red"><strong>*</strong></span>
                                                <input type="text" name="istate" id="istate"
                                                    style="background-color: white;" class="form-control">
                                                <span id="stateerr" style="color:red"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="">Country</label>
                                                <span style="color:red"><strong>*</strong></span>
                                                <input type="text" name="icountry" id="icountry"
                                                    style="background-color: white;" class="form-control">
                                                <span id="counerr" style="color:red"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row mt-3 mb-3">
                                        <div class="col-md-6">
                                            <button class="btn btn-block btn-danger previous"
                                               type="button" id="tab2prev" onclick=Tab2Prev()>Previous</button>
                                        </div>
                                        <div class="col-md-6">
                                            <button class="btn btn-block btn-success next" id="tab2next"
                                                type="button" onclick=Tab2()>Next</button>
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane fade" id="network" role="tabpanel" aria-labelledby="network-list">
                                    <p class="text-center font-bold">NAS Information</p>
                                    <div class="form-group">
                                    <label>Zone</label>
                                    <select class="form-control" id="nasname" name="nasname" required="">
                                        <option value="" disabled="" selected="">Select Nas</option>
                                        <option value="103.113.64.86">103.113.64.86</option>
                                        <option value="103.113.64.45">103.113.64.45</option>
                                        <option value="103.113.64.21">103.113.64.21</option>
                                        <option value="103.119.199.205">103.119.199.205</option>
                                        <option value="103.113.64.38">103.113.64.38</option>
                                    </select>
                                    </div>
                                    <div class="form-group">
                                    <label>Payment Mode</label>
                                    <select name="paymentmethod" class="form-control" id="paymentmethod">
                                        <option value="" selected="" disabled="">-Select-</option>
                                        <option value="Cash/Cheque">Cash/Cheque</option>
                                        <option value="Paytm">Paytm</option>
                                    </select>
                                    </div>
                                    <div class="form-group">
                                    <label>Operator Balance</label>
                                    <input class="form-control" placeholder="Amount" oninput="this.className = ''" id="amount" name="amount"
                                        required=""></div>
                                    <div class="row mt-3 mb-3">
                                        <div class="col-md-6">
                                            <button class="btn btn-block btn-danger previous"
                                               type="button" id="tab3prev" onclick=Tab3Prev()>Previous</button>
                                        </div>
                                        <div class="col-md-6">
                                            <button class="btn btn-block btn-success next" id="tab3next"
                                                type="button" onclick=Tab3()>Next</button>
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane fade" id="upload" role="tabpanel" aria-labelledby="upload-list">
                                    <p class="text-center font-bold">Upload Documents Here</p>
                                    <p style="color: red;">* Required Fields</p>
                                    <div class="form-group">
                                        <label for="document">Documents Type *</label>
                                        <select name="dtype" id="dtype" class="form-control" onchange=inputData(this.value) required>
                                            <option value="" selected disabled>-Select-</option>
                                            <option value="Aadhar Card">Aadhar Card</option>
                                            <option value="PAN Card">Pan Card</option>
                                            <option value="Bank Passbook">Bank Passbook</option>
                                            <option value="Cancel Cheque">Cancel Cheque</option>
                                            <option value="Other">Other</option>
                                        </select>
                                    </div>
                                    <div class="form-group" id="docno1" style="display: none;">
                                        <label id="docno2"></label>
                                        <span style="color:red"><strong>*</strong></span>
                                        <input type="text" id="docno" name="docno" class="form-control" required>
                                        <span id="docerr" style="color:red"></span>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label for="document">Upload Documents</label>
                                                <input type="file" name="docph" class="form-control" id="docph" onchange=ValidateSingleInput(this) required>
                                                <p style="color: red;">Note : Please upload pdf/ jpg/ png/ jpeg for view purpose.</p>
                                            </div>
                                            <div class="form-group" id="docid" style="display: none;">
                                                <label id="doc"></label>
                                                <input type="text" placeholder="ID number" id="idnumber" name="idnumber"
                                                    class="form-control">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row mt-3 mb-3">
                                        <div class="col-md-6">
                                            <button class="btn btn-block btn-danger previous"
                                               type="button" id="tab4prev" onclick=Tab4Prev()>Previous</button>
                                        </div>
                                        <div class="col-md-6">
                                            <button class="btn btn-block btn-success next" id="submit" onclick=validateForm()>Submit</button>
                                        </div>
                                    </div>
                                </div>
                            </div></form>
                            <div class="list-group list-group-horizontal-sm mb-1 text-center" role="tablist">
                                <a class="list-group-item list-group-item-action " id="account1-list"
                                    data-bs-toggle="list" href="#account" role="tab"><i class="bi bi-person"></i>
                                    Account</a>
                                <a class="list-group-item list-group-item-action " id="address1-list"
                                    data-bs-toggle="list" href="#address" role="tab"><i class="bi bi-geo-alt"></i>
                                    Address</a>
                                <a class="list-group-item list-group-item-action " id="network1-list"
                                    data-bs-toggle="list" href="#network" role="tab"><i class="bi bi-hdd-network"></i>
                                    Zone</a>
                                <a class="list-group-item list-group-item-action" id="upload1-list"
                                    data-bs-toggle="list" href="#upload" role="tab"><i class="bi bi-upload"></i>
                                    Upload</a>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
        {{> footer}}
    </div>
{{> cdnjs}}
<script src="js/pages/reseller.js"></script>


</body>

</html>