<!DOCTYPE html>
<html>

<head>
{{> headcdn}}
</head>

<body>
{{> sidebar}}

    <div id="main">
{{> role}}
        <div id="main-content">
            <div class="btn-group dropdown me-1 mb-1">
                <button type="button" class="btn btn-dark dropdown-toggle dropdown-toggle-split"
                    data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-reference="parent">
                    <span class="sr-only"><i class="bi bi-sliders"></i> Control Panel </span>
                </button>
                <div class="dropdown-menu">
                    <a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#changeprice"><i class="bi bi-tag-fill"></i> Change Price</a>
                    <a class="dropdown-item " href="#" data-bs-toggle="modal" data-bs-target="#speedlimit"><i class="bi bi-speedometer"></i> Change Speed Limit</a>
                    <a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#datalimit"><i class="bi bi-file-earmark-bar-graph-fill"></i>
                        Change Quota Limit</a>
                    <a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#validity"><i class="bi bi-hourglass-split"></i>
                        Change Validity</a>

                </div>
            </div>
            <section class="section">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Plan Information</h4>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="basicInput">Plan Name</label>
                                    <input type="text" class="form-control" id="basicInput"
                                        placeholder="Plan Name" style="background-color: white;" disabled>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="basicInput">Offer Price</label>
                                    <input type="text" class="form-control" id="basicInput" placeholder="Offer Price"
                                        style="background-color: white;" disabled>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="basicInput">Usage Price</label>
                                    <input type="text" class="form-control" id="basicInput" placeholder="Usage Price"
                                        style="background-color: white;" disabled>
                                </div>
                                <div class="form-group">
                                    <label for="basicInput">Tax Group</label>
                                    <input type="email" class="form-control" id="basicInput" placeholder="Tax Group"
                                        style="background-color: white;" disabled>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="basicInput">SAC Code</label>
                                    <input type="text" class="form-control" id="basicInput" placeholder="SAC Code"
                                        style="background-color: white;" disabled>
                                </div>
                                <div class="form-group">
                                    <label for="basicInput">Validity</label>
                                    <input type="text" class="form-control" id="basicInput"
                                        placeholder="Valadity" style="background-color: white;" disabled>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="basicInput">Speed Limit</label>
                                    <input type="text" class="form-control" id="basicInput"
                                        placeholder="Speed Limit" style="background-color: white;" disabled>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="basicInput">Data Limit</label>
                                    <input type="text" class="form-control" id="basicInput" placeholder="Data Limit"
                                        style="background-color: white;" disabled>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="basicInput">Remark</label>
                                    <input type="text" class="form-control" id="basicInput"
                                        placeholder="Description Here" style="background-color: white;" disabled>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
{{> footer}}
    </div>
    </div>

    <div class="modal fade text-left" id="changeprice" tabindex="-1" role="dialog" aria-labelledby="myModalLabel160"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable" role="document">
            <div class="modal-content">
                <div class="modal-header bg-primary">
                    <h5 class="modal-title white" id="myModalLabel160">
                        Change Price
                    </h5>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <i data-feather="x"></i>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                        <label>Offer Price</label>
                        <input type="text" placeholder="Offer Price" class="form-control" disabled>
                    </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                        <label>Usage Price</label>
                        <input type="text" placeholder="Usage Price" class="form-control" disabled>
                    </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-5">
                            <div class="form-group">
                        <label>New Offer Price</label>
                        <input type="text" placeholder="New Offer Price" class="form-control">
                    </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                        <label>Inc Tax</label>
                        <input type="checkbox" name="tax" id="tax">
                    </div>
                        </div>
                        <div class="col-md-5">
                            <div class="form-group">
                        <label>New Usage Price</label>
                        <input type="text" placeholder="New Usage Price" class="form-control" disabled>
                    </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light-secondary" data-bs-dismiss="modal">
                        Close
                    </button>
                    <button type="button" class="btn btn-primary ml-1" data-bs-dismiss="modal">
                        Change Price
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade text-left" id="speedlimit" tabindex="-1" role="dialog" aria-labelledby="myModalLabel160"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable" role="document">
            <div class="modal-content">
                <div class="modal-header bg-primary">
                    <h5 class="modal-title white" id="myModalLabel160">
                        Change Speed Limit
                    </h5>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <i data-feather="x"></i>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Speed Limit </label>
                        <input type="text" placeholder="Speed Limit" class="form-control" disabled>
                    </div>
                    <div class="form-group">
                        <label>New Speed Limit (Upload / Download)</label>
                        <input type="text" placeholder="New Speed Limit" class="form-control" >
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light-secondary" data-bs-dismiss="modal">
                        Close
                    </button>
                    <button type="button" class="btn btn-primary ml-1" data-bs-dismiss="modal">
                        Save
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade text-left" id="datalimit" tabindex="-1" role="dialog" aria-labelledby="myModalLabel160"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable" role="document">
            <div class="modal-content">
                <div class="modal-header bg-primary">
                    <h5 class="modal-title white" id="myModalLabel160">
                        Change Data Limit
                    </h5>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <i data-feather="x"></i>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Data Limit </label>
                        <input type="text" placeholder="Data Limit" class="form-control" disabled>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                        <label>New Data Limit</label>
                        <input type="text" placeholder="New Data Limit" class="form-control">
                    </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                        <label>Volume</label>
                        <select name="volume" id="volume" class="form-control">
                            <option value="B">B</option>
                            <option value="KB">KB</option>
                            <option value="MB">MB</option>
                            <option value="GB">GB</option>
                            <option value="TB">TB</option>
                        </select>
                    </div>
                        </div>
                    </div>
                    
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light-secondary" data-bs-dismiss="modal">
                        Close
                    </button>
                    <button type="button" class="btn btn-primary ml-1" data-bs-dismiss="modal">
                        Save Changes
                    </button>
                </div>
            </div>
        </div>
    </div>


    <div class="modal fade text-left" id="validity" tabindex="-1" role="dialog" aria-labelledby="myModalLabel160"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable" role="document">
            <div class="modal-content">
                <div class="modal-header bg-primary">
                    <h5 class="modal-title white" id="myModalLabel160">
                        Change Validity
                    </h5>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <i data-feather="x"></i>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Validity </label>
                        <input type="text" placeholder="Validity" class="form-control" disabled>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                        <label>New Validity</label>
                        <input type="text" placeholder="New Validity" class="form-control">
                    </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                        <label>Time</label>
                        <select name="time" id="volume" class="form-control">
                            <option value="Year">Year</option>
                            <option value="Month">Month</option>
                            <option value="Day">Day</option>
                            <option value="Hour">Hour</option>
                            <option value="Minute">Minute</option>
                            <option value="Second">Second</option>
                        </select>
                    </div>
                        </div>
                    </div>
                    
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light-secondary" data-bs-dismiss="modal">
                        Close
                    </button>
                    <button type="button" class="btn btn-primary ml-1" data-bs-dismiss="modal">
                        Save Changes
                    </button>
                </div>
            </div>
        </div>
    </div>
    </div>
{{> cdnjs}}

</body>

</html>